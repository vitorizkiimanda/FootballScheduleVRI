<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchDetailActivity">

    <TextView
        android:id="@+id/match_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sun, 12 Dec 2018"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:padding="@dimen/spacing8dp"
        android:textSize="@dimen/font_medium"/>
    
    <LinearLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/match_date"
        android:gravity="center"
        android:layout_margin="@dimen/spacing8dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/font_small"
                android:text="Club A"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="10"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textAlignment="center"
            android:textSize="@dimen/font_small"
            android:text="vs"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="10"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/font_small"
                android:text="Club B"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/heading"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goals"
            android:textAlignment="center"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/spacing16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shots"
            android:textAlignment="center"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/spacing16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lineups"
            android:textAlignment="center"
            android:textSize="@dimen/font_big"
            android:layout_marginTop="@dimen/spacing16dp"
            android:layout_marginBottom="@dimen/spacing8dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal Keeper"
            android:textAlignment="center"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Defense"
            android:textAlignment="center"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/spacing16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Midfield"
            android:textAlignment="center"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/spacing16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forward"
            android:textAlignment="center"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/spacing16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Substitutes"
            android:textAlignment="center"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/spacing16dp"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>