<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/spacing16dp"
        android:paddingLeft="@dimen/spacing16dp"
        android:paddingRight="@dimen/spacing16dp"
        android:paddingTop="@dimen/spacing16dp"
        android:orientation="vertical"
        tools:context=".FirstFragment">

        <LinearLayout
            android:id="@+id/item_list"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ripple"
            android:layout_marginBottom="@dimen/spacing16dp">
            <TextView
                android:id="@+id/match_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match Date"
                android:textColor="@color/colorPrimary"
                android:layout_margin="@dimen/spacing8dp"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:textAlignment="textEnd"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/font_small"
                    android:text="Club A"/>
                <TextView
                    android:id="@+id/score_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_small"
                    android:text="0"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:textAlignment="center"
                    android:textSize="@dimen/font_small"
                    android:text="vs"/>
                <TextView
                    android:id="@+id/score_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_small"
                    android:text="0"/>
                <TextView
                    android:id="@+id/name_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:textAlignment="textStart"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/font_small"
                    android:text="Club B"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>